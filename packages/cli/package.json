{
  "name": "@svere/cli",
  "version": "1.0.1",
  "description": "svere CLI",
  "types": "build/types/types.d.ts",
  "bin": {
    "svere": "bin/svere"
  },
  "scripts": {
    "format": "prettier --write {src,src/**,__tests__}/*.{js,ts,tsx,json}",
    "clean-build": "npx tsc --build --clean && rm -rf ./build",
    "compile": "npx tsc --build --verbose --pretty",
    "start": "npm run compile -- --watch",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "npm run format && npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && npm publish",
    "test": "npx jest",
    "watch": "npx jest --watch",
    "snapupdate": "npx jest --updateSnapshot",
    "coverage": "npx jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.2",
    "gluegun": "latest",
    "commander": "^6.2.1",
    "degit": "^2.8.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.8",
    "@types/node": "^12.7.11",
    "prettier": "^1.12.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^4.2.3",
    "@types/cheerio": "0.22.22",
    "@types/jest": "^26.0.19",
    "@types/yargs-parser": "^20.2.0",
    "cachedir": "^2.3.0",
    "etag": "^1.8.1",
    "execa": "^4.0.3",
    "find-cache-dir": "^3.3.1",
    "find-up": "^5.0.0",
    "glob": "^7.1.4",
    "isbinaryfile": "^4.0.6",
    "jest": "^26.2.2",
    "jest-specific-snapshot": "^4.0.0",
    "kleur": "^4.1.1",
    "mkdirp": "^1.0.3",
    "open": "^7.0.4",
    "rimraf": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
